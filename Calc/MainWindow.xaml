        <Button x:Name="bt_mode" Content="" HorizontalAlignment="Left" Margin="180,93,0,0" VerticalAlignment="Top" Height="70" Width="72" FontSize="48" FontFamily="Open Sans Semibold" Background="White"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="19,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" Height="76" FontFamily="Open Sans Semibold" FontSize="48" TextAlignment="Right" TextChanged="TextBox1_TextChanged" InputMethod.IsInputMethodEnabled="False" PreviewTextInput="TextBox1_PreviewTextInput" CommandManager.PreviewExecuted="TextBox1_PreviewExecuted"/>
    </Grid>
</Window>
